<div class= 'container-fluid'>
  <div class="row justify-content-center">
    <div class= 'col-md-4 text-center bg-light text-dark'>
      <h2>ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, 'メールアドレス' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: " メールアドレス" %>
        </div>

        <div class="field">
          <%= f.label :password, 'パスワード' %><br />
          <%= f.password_field :password, autocomplete: "current-password",placeholder: "パスワード" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, 'パスワードを記憶する' %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
